CheckBox < UICheckBox
  size: 16 16
  text-align: left
  text-offset: 18 1
  color: #dfdfdf
  image-color: #dfdfdfff
  image-rect: 0 0 15 15
  image-source: /images/ui/checkbox
  change-cursor-image: true
  cursor: pointer

  $hover !disabled:
    color: #ffffff

  $!checked:
    image-clip: 0 0 15 15

  $hover !checked:
    image-clip: 0 15 15 15

  $checked:
    image-clip: 0 30 15 15

  $hover checked:
    image-clip: 0 45 15 15

  $disabled:
    image-color: #dfdfdf88
    color: #dfdfdf88
    opacity: 0.8
    change-cursor-image: false


NewCheckBox < UICheckBox
  size: 30 30
  text-align: left
  text-offset: 33 0
  color: #D7D7D7
  image-color: #ffffffff
  image-rect: 0 0 30 30
  image-offset: 0 2
  image-source: /images/ui/checkbox

  $hover !disabled:
    color: white

  $!checked:
    image-clip: 0 0 30 30

  $hover !checked:
    image-clip: 0 30 30 30

  $checked:
    image-clip: 0 90 30 30

  $hover checked:
    image-clip: 0 60 30 30

  $disabled:
    image-color: #ffffff88
    color: #aaaaaa88

